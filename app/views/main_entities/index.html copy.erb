<%- model_class = MainEntity -%>

<div id="wrapper">
    <!-- Top Menu -->
    <%= render 'layouts/header' %>
    
    <!-- %= render 'layouts/sidemenu' % -->

    <div class="page-header" id = "header">
      <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>
    </div>

      <%= link_to content_tag(:i, '   Add Entity', :class => "fa fa-plus-circle fa-lg"),
                   new_main_entity_path %>            
      <br>
      <br>
      <table class="table table-hover">
        <thead>
          <tr>
            <th><%= model_class.human_attribute_name(:name) %></th>
            <th><%= model_class.human_attribute_name(:main_name) %></th>
            <th><%= model_class.human_attribute_name(:creation_date) %></th>
            <th><%= model_class.human_attribute_name(:status) %></th>
            <th><%= model_class.human_attribute_name(:address) %></th>
            <th><%= model_class.human_attribute_name(:created_at) %></th>
            <th><%=t '.actions', :default => t("helpers.actions") %></th>
          </tr>
        </thead>
        <tbody>
          <% @main_entities.each do |main_entity| %>
            <tr>
              <td><%= link_to main_entity.name, main_entity_path(main_entity) %></td>
              <td><%= main_entity.main_name %></td>
              <td><%= main_entity.creation_date %></td>
              <td><%= main_entity.status %></td>
              <td><%= main_entity.address %></td>
              <td><%=l main_entity.created_at %></td>
              <td>
                <%= link_to content_tag(:i, '', :class => "fa fa-pencil fa-lg"),
                            edit_main_entity_path(main_entity) %>
                <%= link_to content_tag(:i, '', :class => "fa fa-trash-o fa-lg"),
                          main_entity_path(main_entity), :method => :delete,
                        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>                      
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>

</div>


