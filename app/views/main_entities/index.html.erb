<%- model_class = MainEntity -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h2>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:main_name) %></th>
      <th><%= model_class.human_attribute_name(:creation_date) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%= model_class.human_attribute_name(:address) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @main_entities.each do |main_entity| %>
      <tr>
        <td><%= link_to main_entity.id, main_entity_path(main_entity) %></td>
        <td><%= main_entity.name %></td>
        <td><%= main_entity.main_name %></td>
        <td><%= main_entity.creation_date %></td>
        <td><%= main_entity.status %></td>
        <td><%= main_entity.address %></td>
        <td><%=l main_entity.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_main_entity_path(main_entity), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      main_entity_path(main_entity),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_main_entity_path,
            :class => 'btn btn-primary' %>
