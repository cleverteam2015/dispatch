<%- model_class = Dealer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @dealer.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:main_name) %>:</strong></dt>
  <dd><%= @dealer.main_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:creation_date) %>:</strong></dt>
  <dd><%= @dealer.creation_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @dealer.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @dealer.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parent_id) %>:</strong></dt>
  <dd><%= @dealer.parent_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              dealers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_dealer_path(@dealer), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              dealer_path(@dealer),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
