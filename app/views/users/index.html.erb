<%- model_class = User -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>

<%= link_to content_tag(:i, '   Add User', :class => "fa fa-plus-circle fa-lg"),
           new_user_path %>            
<br>
<br>


<table class="table table-hover">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:username) %></th>
      <th><%= model_class.human_attribute_name(:business_unit) %></th>
      <th><%= model_class.human_attribute_name(:role) %></th>
      <th><%= model_class.human_attribute_name(:status) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.username %></td>
        <td><%= getBUName(user.business_unit) %></td>
        <td><%= getRoleName(user.role)%></td>
        <td><%= user.status %></td>
        <td>
          <%= link_to content_tag(:i, '', :class => "fa fa-pencil fa-lg"),
                      edit_user_path(user) %>
          <%= link_to content_tag(:i, '', :class => "fa fa-trash-o fa-lg"),
                      user_path(user), :method => :delete,
                    :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
