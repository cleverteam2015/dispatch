<%- model_class = BusinessUnit -%>
<div class="page-header">
  <h2><%=t '.title', :default => model_class.model_name.human.titleize %></h2>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:short_name) %>:</strong></dt>
  <dd><%= @business_unit.short_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:long_name) %>:</strong></dt>
  <dd><%= @business_unit.long_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:creation_date) %>:</strong></dt>
  <dd><%= @business_unit.creation_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:status) %>:</strong></dt>
  <dd><%= @business_unit.status %></dd>
  <dt><strong><%= model_class.human_attribute_name(:address) %>:</strong></dt>
  <dd><%= @business_unit.address %></dd>
  <dt><strong><%= model_class.human_attribute_name(:phone) %>:</strong></dt>
  <dd><%= @business_unit.phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:parent_id) %>:</strong></dt>
  <dd><%= @business_unit.parent_id %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              business_units_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_business_unit_path(@business_unit), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              business_unit_path(@business_unit),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
